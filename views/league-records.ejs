<%- include('partials/navbar') %>

<main class="py-20 px-6 max-w-7xl mx-auto">
    <div class="text-center mb-20">
        <h1 class="text-7xl font-black italic uppercase tracking-tighter mb-2">LEAGUE <span class="text-blue-500">RECORDS</span></h1>
        <p class="text-[10px] font-bold uppercase tracking-[0.5em] opacity-40">The VIM Super League Hall of Fame</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% if (records && records.length > 0) { %>
            <% records.forEach(record => { %>
                <div class="glass p-8 rounded-[40px] border border-white/5 hover:border-blue-500/30 transition-all group">
                    <div class="flex justify-between items-start mb-6">
                        <div class="bg-blue-600/10 p-4 rounded-2xl">
                            <span class="text-2xl">üèÜ</span>
                        </div>
                        <span class="text-[10px] font-black uppercase tracking-widest opacity-30"><%= record.date %></span>
                    </div>

                    <h3 class="text-xl font-black uppercase italic mb-1 group-hover:text-blue-500 transition-colors">
                        <%= record.title %>
                    </h3>
                    <p class="text-blue-500 font-bold text-sm mb-4 tracking-tight">Held by: <%= record.holder %></p>
                    
                    <p class="text-white/40 text-xs leading-relaxed">
                        <%= record.description %>
                    </p>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-span-full py-32 text-center glass rounded-[40px]">
                <p class="text-xs font-bold uppercase tracking-widest opacity-20 italic">No records have been etched into history yet.</p>
            </div>
        <% } %>
    </div>
</main>
