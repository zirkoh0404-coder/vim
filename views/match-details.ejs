<%- include('partials/navbar') %>

<main class="py-24 px-6 max-w-6xl mx-auto space-y-8">
    <div class="glass p-12 rounded-[50px] border border-white/10 relative overflow-hidden shadow-2xl">
        <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 via-transparent to-transparent pointer-events-none"></div>
        <div class="flex flex-col md:flex-row items-center justify-between gap-12 relative z-10">
            <div class="text-center space-y-4 flex-1">
                <div class="w-32 h-32 mx-auto bg-white/5 rounded-full flex items-center justify-center p-4 border border-white/10">
                    <img src="<%= match.logoA %>" class="w-full h-full object-contain drop-shadow-[0_0_20px_rgba(255,255,255,0.2)]">
                </div>
                <h2 class="text-3xl font-black italic uppercase text-white tracking-tighter"><%= match.teamA %></h2>
            </div>
            
            <div class="text-center px-8">
                <div class="text-8xl font-black italic text-white tracking-tighter flex items-center gap-6">
                    <span><%= (match.details) ? (match.details.goalsA || 0) : 0 %></span>
                    <span class="text-3xl opacity-20 text-blue-500">-</span>
                    <span><%= (match.details) ? (match.details.goalsB || 0) : 0 %></span>
                </div>
                <p class="text-[10px] font-black uppercase tracking-[0.5em] text-blue-500 mt-6 bg-blue-500/10 py-2 rounded-full border border-blue-500/20 text-center">Full Time</p>
            </div>

            <div class="text-center space-y-4 flex-1">
                <div class="w-32 h-32 mx-auto bg-white/5 rounded-full flex items-center justify-center p-4 border border-white/10">
                    <img src="<%= match.logoB %>" class="w-full h-full object-contain drop-shadow-[0_0_20px_rgba(255,255,255,0.2)]">
                </div>
                <h2 class="text-3xl font-black italic uppercase text-white tracking-tighter"><%= match.teamB %></h2>
            </div>
        </div>
    </div>

    <div class="flex justify-center gap-2 p-1.5 bg-white/5 border border-white/10 rounded-2xl max-w-md mx-auto">
        <button onclick="switchTab('overview')" id="btn-overview" class="tab-btn flex-1 py-3 rounded-xl font-black uppercase text-[10px] tracking-widest transition-all bg-blue-600 text-white">Overview</button>
        <button onclick="switchTab('lineups')" id="btn-lineups" class="tab-btn flex-1 py-3 rounded-xl font-black uppercase text-[10px] tracking-widest transition-all text-white/40 hover:text-white">Lineups</button>
        <button onclick="switchTab('stats')" id="btn-stats" class="tab-btn flex-1 py-3 rounded-xl font-black uppercase text-[10px] tracking-widest transition-all text-white/40 hover:text-white">Stats</button>
    </div>

    <% if (match.details) { %>
        <div id="tab-overview" class="tab-content space-y-8 animate-in fade-in duration-500">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 space-y-6">
                    <div class="glass p-10 rounded-[40px] border border-white/5 h-full flex flex-col justify-center text-center space-y-6">
                        <h3 class="text-xs font-black uppercase tracking-[0.4em] text-blue-500 italic">Match Narrative</h3>
                        <p class="text-2xl font-black text-white italic uppercase tracking-tighter leading-tight">
                            <%= match.details.narrative || `An intense battle between ${match.teamA} and ${match.teamB} has concluded.` %>
                        </p>
                        
                        <% if (match.details.highlights) { %>
                            <div class="pt-4">
                                <a href="<%= match.details.highlights %>" target="_blank" class="inline-flex items-center gap-3 bg-red-600/10 hover:bg-red-600 border border-red-600/20 px-6 py-3 rounded-full text-[10px] font-black uppercase text-white transition-all group">
                                    <span class="w-2 h-2 bg-red-600 rounded-full group-hover:bg-white animate-pulse"></span>
                                    Watch Match Highlights
                                </a>
                            </div>
                        <% } %>

                        <div class="flex justify-center gap-12 pt-6 border-t border-white/5">
                            <div>
                                <p class="text-[10px] font-black opacity-40 uppercase mb-1">Total Goals</p>
                                <p class="text-3xl font-black italic text-white"><%= (parseInt(match.details.goalsA) || 0) + (parseInt(match.details.goalsB) || 0) %></p>
                            </div>
                            <div>
                                <p class="text-[10px] font-black opacity-40 uppercase mb-1">MVP Player</p>
                                <p class="text-3xl font-black italic text-white"><%= match.details.mvpName || 'N/A' %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="glass p-8 rounded-[40px] border border-yellow-500/30 text-center space-y-6">
                    <div class="inline-block px-4 py-1.5 bg-yellow-500/10 rounded-full border border-yellow-500/20">
                        <h3 class="text-[10px] font-black uppercase tracking-[0.3em] text-yellow-500 italic">Match MVP</h3>
                    </div>
                    <div class="relative group">
                        <div class="absolute -inset-4 bg-yellow-500/20 blur-3xl rounded-full opacity-50"></div>
                        <img src="<%= match.details.mvpCardUrl %>" onerror="this.src='https://via.placeholder.com/300x400?text=MVP+CARD'" class="w-full rounded-2xl shadow-2xl relative z-10 hover:scale-105 transition-transform duration-500">
                    </div>
                    <p class="text-xl font-black italic text-white uppercase tracking-tighter"><%= match.details.mvpName %></p>
                </div>
            </div>
        </div>

        <div id="tab-lineups" class="tab-content hidden animate-in fade-in duration-500">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <% ['A', 'B'].forEach(side => { %>
                    <div class="glass p-8 rounded-[40px] border <%= side === 'A' ? 'border-blue-500/20' : 'border-red-500/20' %>">
                        <h3 class="text-xl font-black italic text-white uppercase mb-6 tracking-tighter">
                            <%= side === 'A' ? match.teamA : match.teamB %> 
                            <span class="<%= side === 'A' ? 'text-blue-500' : 'text-red-500' %>">Squad</span>
                        </h3>
                        <div class="space-y-3">
                            <% if (match.details['lineup' + side]) { %>
                                <% match.details['lineup' + side].split('\n').filter(l => l.trim()).forEach(line => { %>
                                    <% const parts = line.split(':'); %>
                                    <div class="flex justify-between items-center bg-white/5 p-4 rounded-2xl border border-white/5">
                                        <span class="text-[11px] font-black <%= side === 'A' ? 'text-blue-400' : 'text-red-400' %> uppercase w-12"><%= parts[0] ? parts[0].trim() : '' %></span>
                                        <span class="text-sm font-bold text-white uppercase flex-1 text-center"><%= parts[1] ? parts[1].trim() : '' %></span>
                                        <span class="text-[11px] font-black text-white/40"><%= parts[2] ? parts[2].trim() : '---' %></span>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p class="text-white/20 text-center py-4 text-[10px] font-bold uppercase">No lineup data</p>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <div id="tab-stats" class="tab-content hidden space-y-12 animate-in fade-in duration-500">
            <div class="glass p-10 rounded-[40px] border border-white/5 max-w-4xl mx-auto">
                <div class="space-y-10">
                    <% 
                    const statsList = [
                        { label: 'POSSESSION', a: match.details.possessionA, b: match.details.possessionB, unit: '%' },
                        { label: 'GOALS', a: match.details.goalsA, b: match.details.goalsB, unit: '' },
                        { label: 'ASSISTS', a: match.details.assistsA, b: match.details.assistsB, unit: '' },
                        { label: 'SAVES', a: match.details.savesA, b: match.details.savesB, unit: '' }
                    ]
                    %>
                    <% statsList.forEach(s => { %>
                        <div class="space-y-4">
                            <div class="flex justify-between items-center text-[12px] font-black text-white uppercase italic tracking-[0.2em]">
                                <span class="w-12 <%= parseInt(s.a) > parseInt(s.b) ? 'text-blue-500 text-lg' : 'opacity-40' %>"><%= s.a %><%= s.unit %></span>
                                <span class="text-[10px] opacity-30 font-bold tracking-[0.4em]"><%= s.label %></span>
                                <span class="w-12 text-right <%= parseInt(s.b) > parseInt(s.a) ? 'text-blue-500 text-lg' : 'opacity-40' %>"><%= s.b %><%= s.unit %></span>
                            </div>
                            <div class="h-1.5 bg-white/5 rounded-full overflow-hidden flex">
                                <% 
                                    let total = (parseInt(s.a) + parseInt(s.b)) || 1;
                                    let percA = (parseInt(s.a) / total) * 100;
                                    if(s.label === 'POSSESSION') percA = parseInt(s.a) || 50; 
                                %>
                                <div class="h-full bg-blue-600 transition-all duration-1000" style="width: <%= percA %>%"></div>
                                <div class="h-full bg-white/10 transition-all duration-1000 flex-1"></div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
                <% ['A', 'B'].forEach(side => { %>
                    <div class="glass p-8 rounded-[35px] border border-white/5">
                        <h4 class="text-[10px] font-black uppercase <%= side === 'A' ? 'text-blue-500' : 'text-red-500' %> mb-6 tracking-widest italic">
                            <%= side === 'A' ? match.teamA : match.teamB %> PERFORMANCE
                        </h4>
                        <div class="space-y-3">
                            <% 
                                const playerStats = side === 'A' ? match.details.teamAPlayers : match.details.teamBPlayers;
                                if (playerStats && playerStats.length > 0) { 
                                    playerStats.forEach(p => { 
                            %>
                                <div class="flex justify-between items-center bg-white/5 p-4 rounded-2xl border border-white/5">
                                    <span class="text-[11px] font-bold text-white uppercase italic"><%= p.name %></span>
                                    <div class="flex gap-4 text-[10px] font-black">
                                        <span class="<%= p.type === 'saves' ? 'text-yellow-500' : (side === 'A' ? 'text-blue-400' : 'text-red-400') %>">
                                            <%= p.type.toUpperCase() %>: <%= p.value %>
                                        </span>
                                        <span class="text-white/40 border-l border-white/10 pl-4">ASSISTS: <%= p.assists %></span>
                                    </div>
                                </div>
                            <% })} else { %>
                                <p class="text-white/20 text-center py-4 text-[10px] font-bold uppercase">No individual stats</p>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
</main>

<script>
    function switchTab(tabId) {
        document.querySelectorAll('.tab-content').forEach(el => el.classList.add('hidden'));
        document.getElementById('tab-' + tabId).classList.remove('hidden');
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.remove('bg-blue-600', 'text-white');
            btn.classList.add('text-white/40');
        });
        const activeBtn = document.getElementById('btn-' + tabId);
        activeBtn.classList.add('bg-blue-600', 'text-white');
        activeBtn.classList.remove('text-white/40');
    }
</script>