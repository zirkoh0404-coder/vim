<%- include('partials/navbar') %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Archivo+Black&family=Outfit:wght@300;400;700;900&display=swap');

    body { 
        background-color: #050505; 
        color: #fff; 
        font-family: 'Outfit', sans-serif; 
        overflow-x: hidden; 
    }

    /* Professional Branding Fonts */
    .font-heading { font-family: 'Archivo Black', sans-serif; text-transform: uppercase; letter-spacing: -0.02em; }
    
    /* Luxury Glass Effect */
    .pro-card {
        background: linear-gradient(145deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.01) 100%);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255,255,255,0.05);
        border-radius: 1.5rem;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .pro-card:hover {
        border-color: rgba(59, 130, 246, 0.3);
        background: rgba(255,255,255,0.04);
        transform: translateY(-4px);
    }

    /* Sports Label */
    .tag-pro {
        background: #3b82f6;
        color: #fff;
        padding: 4px 10px;
        font-size: 9px;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        border-radius: 2px;
    }

    /* Hero Mesh Gradient */
    .mesh-bg {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: 
            radial-gradient(at 0% 0%, rgba(59, 130, 246, 0.15) 0px, transparent 50%),
            radial-gradient(at 100% 100%, rgba(30, 58, 138, 0.1) 0px, transparent 50%);
        z-index: -1;
        pointer-events: none;
    }

    /* Custom Scrollbar for Pro Look */
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: #050505; }
    ::-webkit-scrollbar-thumb { background: #1e1e1e; border-radius: 10px; }
</style>

<div class="mesh-bg"></div>

<main class="relative pt-28 pb-32 px-6 max-w-[1600px] mx-auto">
    
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 mb-20">
        
        <div class="lg:col-span-7 relative group overflow-hidden rounded-[2.5rem] border border-white/5 h-[500px]">
            <img src="/images/vimgfx.png" class="absolute inset-0 w-full h-full object-cover transition duration-1000 group-hover:scale-110 opacity-50">
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"></div>
            
            <div class="absolute bottom-12 left-12 right-12">
                <div class="flex items-center gap-3 mb-6">
                    <span class="tag-pro">Featured</span>
                    <span class="h-[1px] w-12 bg-white/20"></span>
                    <span class="text-[10px] uppercase tracking-widest text-white/40 font-bold">Season 2024</span>
                </div>
                <h1 class="text-6xl md:text-8xl font-heading leading-[0.9] mb-6 italic">
                    REDEFINING <br> <span class="text-blue-500">EXCELLENCE.</span>
                </h1>
                <p class="text-white/50 text-base max-w-lg font-light leading-relaxed">The hub for elite players and professional management. Your journey to the Super League starts here.</p>
            </div>
        </div>

        <div class="lg:col-span-5 grid grid-cols-1 gap-6">
            <div class="pro-card p-10 flex flex-col justify-between border-r-4 border-blue-600 bg-blue-600/5">
                <div>
                    <p class="text-[10px] font-black text-blue-500 uppercase tracking-[0.3em] mb-8">Up Next / Broadcast</p>
                    <% let nextMatch = matches.find(m => m.status === 'upcoming'); %>
                    <% if(nextMatch) { %>
                        <div class="flex items-center justify-between">
                            <div class="flex flex-col items-center gap-2">
                                <img src="<%= nextMatch.logoA %>" class="w-16 h-16 object-contain drop-shadow-2xl">
                                <span class="text-[10px] font-bold uppercase text-white/40"><%= nextMatch.teamA %></span>
                            </div>
                            <div class="text-center">
                                <span class="text-4xl font-heading italic text-white/10">VS</span>
                                <div class="bg-blue-600 text-[10px] font-black px-4 py-1 rounded-full mt-2 tracking-tighter"><%= nextMatch.time %></div>
                            </div>
                            <div class="flex flex-col items-center gap-2">
                                <img src="<%= nextMatch.logoB %>" class="w-16 h-16 object-contain drop-shadow-2xl">
                                <span class="text-[10px] font-bold uppercase text-white/40 text-right"><%= nextMatch.teamB %></span>
                            </div>
                        </div>
                    <% } else { %>
                        <h3 class="text-3xl font-heading italic opacity-10">No Scheduled Events</h3>
                    <% } %>
                </div>
                
                <div class="mt-8 pt-8 border-t border-white/5 flex items-center justify-between">
                    <span class="flex items-center gap-2">
                        <span class="w-2 h-2 bg-red-600 rounded-full animate-ping"></span>
                        <span class="text-[10px] font-black uppercase tracking-widest">Live Channel</span>
                    </span>
                    <a href="/broadcast" class="text-[10px] font-black text-blue-500 uppercase hover:text-white transition">Watch Stream â†’</a>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-6">
                <div class="pro-card p-8 flex flex-col justify-between">
                    <span class="text-[9px] font-bold text-white/30 uppercase tracking-widest">Agents</span>
                    <h4 class="text-5xl font-heading italic"><%= players.length %></h4>
                </div>
                <div class="pro-card p-8 flex flex-col justify-between border-l-2 border-white/10">
                    <span class="text-[9px] font-bold text-white/30 uppercase tracking-widest">Fixtures</span>
                    <h4 class="text-5xl font-heading italic"><%= matches.length %></h4>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-32">
        <div class="flex justify-between items-center mb-10 border-b border-white/5 pb-6">
            <h2 class="text-2xl font-heading italic italic">Recent <span class="text-blue-500">Scorelines</span></h2>
            <a href="/matches" class="text-[10px] font-black text-white/40 uppercase tracking-widest hover:text-blue-500 transition">Archives</a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% let recentResults = matches.filter(m => m.status === 'completed').reverse().slice(0, 4); %>
            <% recentResults.forEach(r => { %>
                <div class="pro-card p-6 group cursor-pointer hover:bg-white/[0.05]">
                    <div class="flex justify-between items-center mb-6 opacity-40 group-hover:opacity-100 transition">
                        <span class="text-[8px] font-black uppercase tracking-widest">Final</span>
                        <span class="text-[8px] font-bold"><%= r.time %></span>
                    </div>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <span class="text-xs font-bold uppercase tracking-tight text-white/70"><%= r.teamA %></span>
                            <span class="text-xl font-heading <%= r.details.goalsA > r.details.goalsB ? 'text-blue-500' : 'text-white/20' %>"><%= r.details.goalsA %></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-xs font-bold uppercase tracking-tight text-white/70"><%= r.teamB %></span>
                            <span class="text-xl font-heading <%= r.details.goalsB > r.details.goalsA ? 'text-blue-500' : 'text-white/20' %>"><%= r.details.goalsB %></span>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-12 mb-32">
        <div class="lg:col-span-1">
            <span class="tag-pro mb-4">Journal</span>
            <h2 class="text-4xl font-heading italic mb-6 leading-none">THE <br>LATEST <br><span class="text-blue-500">INTEL.</span></h2>
            <p class="text-sm text-white/40 leading-relaxed">Daily updates from the frontlines of the VIM Hub recruitment and match results.</p>
        </div>
        
        <div class="lg:col-span-3 grid grid-cols-1 md:grid-cols-2 gap-8">
            <% if (typeof stories !== 'undefined' && stories.length > 0) { %>
                <% stories.slice().reverse().slice(0, 2).forEach(story => { %>
                    <div class="group">
                        <div class="rounded-[2rem] overflow-hidden aspect-[16/9] mb-6 border border-white/5 relative bg-zinc-900">
                            <img src="<%= story.image %>" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 opacity-60">
                            <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
                        </div>
                        <span class="text-[9px] font-black text-blue-500 uppercase tracking-widest mb-3 block">Category: Official</span>
                        <h4 class="font-heading text-xl mb-3 group-hover:text-blue-500 transition"><%= story.title %></h4>
                        <p class="text-sm text-white/40 line-clamp-2"><%= story.description %></p>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <div class="pro-card p-10 mb-32 border-dashed border-white/10 bg-transparent">
        <div class="flex items-center gap-4 mb-10">
            <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-blue-500"></span>
            </span>
            <h2 class="text-sm font-black uppercase tracking-[0.4em] text-white/50">Market Intelligence Stream</h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-y-8 gap-x-12">
            <% players.slice(-6).reverse().forEach((player, index) => { %>
                <div class="flex items-start gap-4 group">
                    <span class="text-blue-500 font-heading text-xs mt-1">0<%= index + 1 %></span>
                    <div>
                        <p class="text-xs font-bold uppercase tracking-tight group-hover:text-blue-400 transition cursor-default">
                            <%= player.name %> <span class="text-white/20 font-medium">Synchronized to central database</span>
                        </p>
                        <p class="text-[8px] text-white/20 uppercase mt-1 font-black">Transmission Encrypted // Verified</p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="relative py-20 rounded-[3rem] overflow-hidden text-center border border-white/5 bg-zinc-900/50">
        <div class="relative z-10">
            <h2 class="text-5xl md:text-7xl font-heading italic mb-10 leading-none">READY TO <br>CLAIM THE <span class="text-blue-500">THRONE?</span></h2>
            <div class="flex flex-col md:flex-row items-center justify-center gap-6">
                <a href="/market" class="bg-blue-600 text-white px-12 py-5 rounded-full font-black text-[10px] uppercase tracking-[0.2em] hover:bg-white hover:text-black transition-all duration-500">
                    Explore Market
                </a>
                <a href="/join" class="border border-white/10 text-white px-12 py-5 rounded-full font-black text-[10px] uppercase tracking-[0.2em] hover:bg-white/5 transition-all">
                    Agent Application
                </a>
            </div>
        </div>
    </div>

</main>

<%- include('partials/footer') %>
