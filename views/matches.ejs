<%- include('partials/navbar') %>

<style>
    /* Broadcast Background Texture */
    .bg-broadcast {
        background-color: #050505;
        background-image: 
            linear-gradient(rgba(59, 130, 246, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(59, 130, 246, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
    }

    /* Scanning Line Effect */
    .scanline {
        width: 100%;
        height: 100px;
        z-index: 1;
        background: linear-gradient(0deg, rgba(0, 0, 0, 0) 0%, rgba(59, 130, 246, 0.05) 50%, rgba(0, 0, 0, 0) 100%);
        opacity: 0.1;
        position: absolute;
        bottom: 100%;
        animation: scan 8s linear infinite;
    }
    @keyframes scan { 0% { bottom: 100%; } 100% { bottom: -100%; } }

    /* Match Hub Styling */
    .hub-card {
        background: rgba(15, 15, 15, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.08);
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        position: relative;
        overflow: hidden;
    }

    .hub-card:hover {
        border-color: rgba(59, 130, 246, 0.4);
        background: rgba(20, 20, 20, 0.8);
        transform: scale(1.01);
    }

    /* Team Glows */
    .team-glow-a { filter: drop-shadow(0 0 15px rgba(59, 130, 246, 0.3)); }
    .team-glow-b { filter: drop-shadow(0 0 15px rgba(239, 68, 68, 0.3)); }

    /* Score HUD */
    .score-hud {
        background: #000;
        border: 1px solid rgba(255,255,255,0.1);
        padding: 10px 24px;
        border-radius: 12px;
        position: relative;
    }

    .score-hud::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; height: 1px;
        background: linear-gradient(90deg, transparent, #3b82f6, transparent);
    }

    /* Status Badge */
    .badge-live { background: #ef4444; color: white; animation: flash 1.5s infinite; }
    @keyframes flash { 0%, 100% { opacity: 1; } 50% { opacity: 0.6; } }
</style>

<main class="py-20 px-6 max-w-7xl mx-auto min-h-screen bg-broadcast text-white relative">
    <div class="scanline"></div>

    <div class="relative z-10 flex flex-col items-center mb-24 text-center">
        <div class="flex items-center gap-4 mb-4">
            <div class="h-px w-12 bg-blue-500/50"></div>
            <span class="text-[10px] font-black uppercase tracking-[0.6em] text-blue-500">Live Coverage</span>
            <div class="h-px w-12 bg-blue-500/50"></div>
        </div>
        <h2 class="text-7xl md:text-9xl font-black italic uppercase tracking-tighter leading-none mb-4">
            <span class="text-white">MAT</span><span class="text-blue-500">CHES</span>
        </h2>
        <p class="text-[9px] font-bold opacity-30 uppercase tracking-[0.8em]">Official Broadcast & Results Feed</p>
    </div>

    <% if(liveLink && liveLink.trim() !== "") { %>
        <% 
            let embedLink = liveLink;
            if (liveLink.includes('watch?v=')) {
                embedLink = liveLink.replace('watch?v=', 'embed/').split('&')[0];
            } else if (liveLink.includes('youtu.be/')) {
                embedLink = liveLink.replace('youtu.be/', 'youtube.com/embed/').split('?')[0];
            }
        %>
        <div class="relative max-w-6xl mx-auto mb-32">
            <div class="hub-card rounded-[40px] p-2 border-blue-500/20 shadow-[0_0_80px_rgba(59,130,246,0.1)]">
                <div class="aspect-video w-full rounded-[35px] overflow-hidden bg-black relative">
                    <div class="absolute top-8 left-8 z-20 flex flex-col gap-2">
                        <div class="flex items-center gap-3 bg-red-600 px-4 py-1.5 rounded-lg badge-live">
                            <span class="text-[10px] font-black uppercase tracking-widest">ON AIR</span>
                        </div>
                        <div class="bg-black/60 backdrop-blur-md px-4 py-2 rounded-lg border border-white/10">
                            <span class="text-[10px] font-bold text-white/70 uppercase tracking-widest">VIM NETWORK 1</span>
                        </div>
                    </div>
                    <iframe class="w-full h-full" src="<%= embedLink %>" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    <% } %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <% if(matches && matches.length > 0) { %>
            <% matches.forEach(m => { %>
                <a href="/match/<%= m.id %>" class="group">
                    <div class="hub-card p-12 rounded-[40px] border-white/5 flex flex-col justify-between h-full">
                        
                        <div class="flex justify-between items-center mb-10">
                            <span class="text-[8px] font-black text-white/20 uppercase tracking-[0.3em]">ID: #<%= String(m.id).substring(0,6) %></span>
                            <div class="flex items-center gap-2">
                                <div class="w-1.5 h-1.5 rounded-full <%= (m.status === 'completed') ? 'bg-white/20' : 'bg-green-500 shadow-[0_0_10px_#22c55e]' %>"></div>
                                <span class="text-[9px] font-black uppercase tracking-widest <%= (m.status === 'completed') ? 'text-white/40' : 'text-green-500' %>">
                                    <%= (m.status === 'completed') ? 'COMPLETED' : 'UPCOMING' %>
                                </span>
                            </div>
                        </div>

                        <div class="flex items-center justify-between gap-4">
                            <div class="flex-1 text-center group-hover:transform group-hover:-translate-x-2 transition-transform duration-500">
                                <img src="<%= m.logoA %>" class="w-20 h-20 mx-auto object-contain team-glow-a mb-4">
                                <h3 class="font-black italic text-sm uppercase tracking-tighter truncate"><%= m.teamA %></h3>
                            </div>

                            <div class="flex flex-col items-center">
                                <% if(m.status === 'completed' && m.details) { %>
                                    <div class="score-hud flex items-center gap-6 shadow-2xl">
                                        <span class="text-5xl font-black italic text-white"><%= m.details.goalsA || 0 %></span>
                                        <span class="text-blue-500 text-2xl font-black">:</span>
                                        <span class="text-5xl font-black italic text-white"><%= m.details.goalsB || 0 %></span>
                                    </div>
                                <% } else { %>
                                    <div class="bg-white/5 px-6 py-3 rounded-xl border border-white/10">
                                        <span class="text-2xl font-black italic text-blue-500 uppercase tracking-tight"><%= m.time %></span>
                                    </div>
                                <% } %>
                                <p class="text-[8px] font-black text-white/20 uppercase tracking-[0.4em] mt-4">STADIUM</p>
                            </div>

                            <div class="flex-1 text-center group-hover:transform group-hover:translate-x-2 transition-transform duration-500">
                                <img src="<%= m.logoB %>" class="w-20 h-20 mx-auto object-contain team-glow-b mb-4">
                                <h3 class="font-black italic text-sm uppercase tracking-tighter truncate"><%= m.teamB %></h3>
                            </div>
                        </div>

                        <div class="mt-12 pt-8 border-t border-white/5 flex items-center justify-between">
                            <div class="flex gap-4">
                                <% if(m.tags) { %>
                                    <% m.tags.split(',').forEach(tag => { %>
                                        <div class="bg-blue-600/10 px-3 py-1 rounded text-[9px] font-black text-blue-500 uppercase tracking-widest">
                                            <%= tag.trim() %>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <div class="bg-blue-600/10 px-3 py-1 rounded text-[9px] font-black text-blue-500 uppercase">Season 1</div>
                                <% } %>
                                <div class="bg-white/5 px-3 py-1 rounded text-[9px] font-black text-white/40 uppercase tracking-widest italic">VIM-LEAGUE</div>
                            </div>
                            <div class="flex items-center gap-2 group/btn">
                                <span class="text-[9px] font-black uppercase text-white tracking-widest opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-4 group-hover:translate-x-0">View Analysis</span>
                                <div class="w-10 h-10 rounded-full border border-white/10 flex items-center justify-center group-hover:bg-blue-600 group-hover:border-blue-600 transition-all">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        <% } else { %>
            <div class="col-span-full py-32 text-center hub-card rounded-[40px] border-dashed border-white/10">
                <p class="text-white/20 font-black italic uppercase tracking-[1em]">No Match Logs Available</p>
            </div>
        <% } %>
    </div>
</main>
