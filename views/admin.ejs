<%- include('partials/navbar') %>

<div class="flex min-h-screen bg-[#0a0a0b] text-white font-sans">
    <aside class="w-64 fixed left-0 top-0 h-full bg-black/40 backdrop-blur-xl border-r border-white/5 p-6 z-50 hidden md:block">
        <div class="mb-10">
            <h2 class="text-2xl font-black italic uppercase tracking-tighter">VIM <span class="text-blue-500">ADMIN</span></h2>
            <p class="text-[8px] font-bold text-white/30 tracking-[0.3em] uppercase">Control Center 2025</p>
        </div>
        
        <nav class="space-y-2">
            <a href="#overview" class="flex items-center gap-3 p-3 rounded-xl bg-blue-600/10 text-blue-500 font-bold text-xs uppercase transition-all border border-blue-500/20">
                <span>Overview</span>
            </a>
            <a href="#matches" class="flex items-center gap-3 p-3 rounded-xl hover:bg-white/5 text-white/60 font-bold text-xs uppercase transition-all">
                <span>Match Manager</span>
            </a>
            <a href="#queue" class="flex items-center gap-3 p-3 rounded-xl hover:bg-white/5 text-white/60 font-bold text-xs uppercase transition-all">
                <span>Review Queue</span>
            </a>
            <a href="#tables" class="flex items-center gap-3 p-3 rounded-xl hover:bg-white/5 text-white/60 font-bold text-xs uppercase transition-all">
                <span>League Tables</span>
            </a>
            <a href="#market" class="flex items-center gap-3 p-3 rounded-xl hover:bg-white/5 text-white/60 font-bold text-xs uppercase transition-all">
                <span>Player Market</span>
            </a>
        </nav>
    </aside>

    <main class="flex-1 md:ml-64 p-6 lg:p-12 space-y-12">
        
        <section id="overview" class="grid grid-cols-1 lg:grid-cols-3 gap-6 pt-10">
            <div class="lg:col-span-2">
                <h1 class="text-5xl font-black italic uppercase tracking-tighter mb-2">DASHBOARD</h1>
                <p class="text-white/40 font-bold uppercase text-[10px] tracking-widest">Managing <%= players.length %> Players & <%= matches.length %> Matches</p>
            </div>
            <div class="glass p-6 rounded-3xl border border-blue-500/20">
                <form action="/admin/live" method="POST" class="space-y-3">
                    <h3 class="text-[9px] font-black uppercase text-blue-500 tracking-widest">Global Live Feed</h3>
                    <div class="flex gap-2">
                        <input name="link" value="<%= liveLink %>" placeholder="YouTube URL" class="flex-1 bg-black/40 border border-white/10 p-3 rounded-xl text-xs outline-none focus:border-blue-500">
                        <button type="submit" class="bg-blue-600 px-4 rounded-xl text-[10px] font-black uppercase">Update</button>
                    </div>
                </form>
            </div>
        </section>

        <section id="matches" class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div class="glass p-8 rounded-[35px] border border-white/5 space-y-6">
                <div class="flex justify-between items-center">
                    <h3 class="text-sm font-black uppercase tracking-widest">Schedule Match</h3>
                    <span class="bg-green-500/10 text-green-500 text-[8px] px-2 py-1 rounded-full font-black uppercase">New Entry</span>
                </div>
                <form action="/admin/add-match" method="POST" class="space-y-4">
                    <div class="grid grid-cols-2 gap-3">
                        <input name="teamA" placeholder="Home Team" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none focus:border-blue-500">
                        <input name="logoA" placeholder="Logo URL" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                        <input name="teamB" placeholder="Away Team" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none focus:border-blue-500">
                        <input name="logoB" placeholder="Logo URL" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                    </div>
                    <div class="grid grid-cols-2 gap-3">
                        <input name="time" placeholder="Time (e.g. 18:00)" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                        <input name="tags" placeholder="Tags (SERIE A, S1)" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                    </div>
                    <label class="flex items-center gap-3 bg-white/5 border border-white/10 p-4 rounded-2xl cursor-pointer">
                        <input type="checkbox" name="isLive" value="true" class="w-4 h-4 accent-blue-500">
                        <span class="text-xs font-bold uppercase">Mark as Live Now</span>
                    </label>
                    <button type="submit" class="w-full bg-white text-black py-4 rounded-2xl font-black uppercase text-xs hover:bg-blue-500 hover:text-white transition-all shadow-lg">Post Match to Hub</button>
                </form>
            </div>

            <div class="glass p-8 rounded-[35px] border border-white/5 space-y-6">
                <h3 class="text-sm font-black uppercase tracking-widest text-blue-500">Current Schedule</h3>
                <div class="max-h-[400px] overflow-y-auto pr-2 space-y-3 custom-scrollbar">
                    <% matches.forEach((m) => { %>
                        <div class="group flex items-center justify-between bg-white/[0.03] p-4 rounded-2xl border border-white/5 hover:border-blue-500/30 transition-all">
                            <div class="flex flex-col gap-1">
                                <span class="text-xs font-black uppercase"><%= m.teamA %> <span class="text-blue-500 italic">vs</span> <%= m.teamB %></span>
                                <div class="flex gap-2">
                                    <span class="text-[9px] text-white/40 font-bold uppercase tracking-tighter"><%= m.time %></span>
                                    <% if(m.tags) { m.tags.split(',').forEach(t => { %>
                                        <span class="text-[8px] font-black text-blue-400 uppercase"><%= t.trim() %></span>
                                    <% })} %>
                                </div>
                            </div>
                            <form action="/admin/delete-match" method="POST" onsubmit="return confirm('Delete match?');">
                                <input type="hidden" name="matchId" value="<%= m.id %>">
                                <button type="submit" class="w-8 h-8 rounded-full flex items-center justify-center bg-red-500/10 text-red-500 text-lg font-bold hover:bg-red-500 hover:text-white transition-all">×</button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>

        <section class="glass p-10 rounded-[45px] border border-blue-500/20 shadow-2xl">
            <div class="mb-10">
                <h2 class="text-3xl font-black italic uppercase text-white">Match <span class="text-blue-500">Report Engine</span></h2>
                <p class="text-[10px] text-white/30 uppercase font-black tracking-[0.3em]">Finalize scores, mvps, and individual performances</p>
            </div>

            <form action="/admin/update-match-details" method="POST" class="space-y-8">
                <div class="bg-blue-600/5 p-6 rounded-3xl border border-blue-500/20">
                    <label class="text-[10px] font-black uppercase text-blue-500 block mb-3">1. Target Match</label>
                    <select name="matchId" class="w-full bg-black border border-white/10 p-4 rounded-2xl text-white text-xs outline-none focus:border-blue-500 appearance-none" required>
                        <option value="" disabled selected>Choose a match to finalize...</option>
                        <% matches.forEach(m => { %>
                            <option value="<%= m.id %>"><%= m.teamA %> vs <%= m.teamB %> (<%= m.time %>)</option>
                        <% }) %>
                    </select>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <div class="space-y-4">
                        <h4 class="text-[10px] font-black uppercase text-white/40 tracking-widest">Media & Narrative</h4>
                        <textarea name="narrative" placeholder="Match Headline / Brief Story..." class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs outline-none h-24 focus:border-blue-500"></textarea>
                        <div class="grid grid-cols-2 gap-4">
                            <input name="possessionA" placeholder="Team A Pos %" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                            <input name="possessionB" placeholder="Team B Pos %" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                        </div>
                        <input name="highlights" placeholder="YouTube Highlights Link" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                        <div class="grid grid-cols-2 gap-4">
                            <input name="mvpName" placeholder="MVP Username" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                            <input name="mvpCardUrl" placeholder="MVP Card URL" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs outline-none">
                        </div>
                    </div>

                    <div class="space-y-4">
                        <h4 class="text-[10px] font-black uppercase text-white/40 tracking-widest">Scoreboard Totals</h4>
                        <div class="grid grid-cols-2 gap-6 bg-white/[0.02] p-6 rounded-3xl border border-white/5">
                            <div class="space-y-3">
                                <p class="text-[9px] font-black text-blue-500 uppercase">Home Stats</p>
                                <input type="number" name="goalsA" placeholder="Goals" class="w-full bg-black/40 border border-white/10 p-3 rounded-xl text-xs">
                                <input type="number" name="assistsA" placeholder="Assists" class="w-full bg-black/40 border border-white/10 p-3 rounded-xl text-xs">
                                <input type="number" name="savesA" placeholder="Saves" class="w-full bg-black/40 border border-white/10 p-3 rounded-xl text-xs">
                            </div>
                            <div class="space-y-3">
                                <p class="text-[9px] font-black text-red-500 uppercase">Away Stats</p>
                                <input type="number" name="goalsB" placeholder="Goals" class="w-full bg-black/40 border border-white/10 p-3 rounded-xl text-xs">
                                <input type="number" name="assistsB" placeholder="Assists" class="w-full bg-black/40 border border-white/10 p-3 rounded-xl text-xs">
                                <input type="number" name="savesB" placeholder="Saves" class="w-full bg-black/40 border border-white/10 p-3 rounded-xl text-xs">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="p-8 bg-white/[0.02] rounded-[40px] border border-white/5">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                        <div class="space-y-4">
                            <div class="flex justify-between items-center">
                                <p class="text-[10px] font-black uppercase text-blue-500">Team A Performers</p>
                                <button type="button" onclick="addStatRow('teamA')" class="bg-blue-600/10 text-blue-500 px-4 py-2 rounded-xl text-[9px] font-black uppercase border border-blue-500/20">+ Add</button>
                            </div>
                            <div id="statRows-teamA" class="space-y-2"></div>
                        </div>
                        <div class="space-y-4">
                            <div class="flex justify-between items-center">
                                <p class="text-[10px] font-black uppercase text-red-500">Team B Performers</p>
                                <button type="button" onclick="addStatRow('teamB')" class="bg-red-600/10 text-red-500 px-4 py-2 rounded-xl text-[9px] font-black uppercase border border-red-500/20">+ Add</button>
                            </div>
                            <div id="statRows-teamB" class="space-y-2"></div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <textarea name="lineupA" rows="6" placeholder="Lineup A (GK:Name:Rating)" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs text-white outline-none"></textarea>
                    <textarea name="lineupB" rows="6" placeholder="Lineup B (GK:Name:Rating)" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-xs text-white outline-none"></textarea>
                </div>

                <button type="submit" class="w-full bg-blue-600 py-5 rounded-[25px] font-black uppercase text-xs tracking-widest shadow-xl shadow-blue-600/20 hover:scale-[1.01] transition-transform">Finalize & Push Report</button>
            </form>
        </section>

        <section id="queue" class="glass p-10 rounded-[45px] border border-yellow-500/20">
            <div class="flex justify-between items-center mb-10">
                <div>
                    <h2 class="text-3xl font-black italic uppercase text-yellow-500">Review Queue</h2>
                    <p class="text-[10px] text-white/30 uppercase font-black tracking-widest">Applications Awaiting Verification</p>
                </div>
                <input type="text" onkeyup="filterQueue(this)" placeholder="Filter Names..." class="bg-white/5 border border-white/10 px-6 py-3 rounded-2xl text-[10px] text-white outline-none w-64 focus:border-yellow-500 transition-all">
            </div>

            <div class="grid grid-cols-1 gap-4" id="queueList">
                <% let pending = players.filter(p => !p.verified); %>
                <% if (pending.length > 0) { %>
                    <% pending.forEach(player => { %>
                        <details class="queue-card group bg-black/40 border border-white/5 rounded-3xl overflow-hidden hover:border-yellow-500/40 transition-all">
                            <summary class="p-6 cursor-pointer flex items-center justify-between list-none">
                                <div class="flex items-center gap-5">
                                    <div class="w-12 h-12 bg-yellow-500/10 rounded-2xl flex items-center justify-center font-black italic text-yellow-500 text-xl border border-yellow-500/20"><%= player.name.charAt(0) %></div>
                                    <div>
                                        <p class="font-black text-white uppercase italic text-lg"><%= player.name %></p>
                                        <p class="text-[9px] text-blue-400 font-black uppercase tracking-widest"><%= player.discord %></p>
                                    </div>
                                </div>
                                <span class="bg-yellow-500 text-black px-4 py-2 rounded-xl text-[9px] font-black uppercase">Inspect Application</span>
                            </summary>
                            <div class="p-8 border-t border-white/5 bg-gradient-to-b from-transparent to-yellow-500/[0.02]">
                                <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
                                    <div class="space-y-6">
                                        <div class="bg-white/5 p-5 rounded-2xl border border-white/5">
                                            <p class="text-[9px] font-black uppercase text-white/40 mb-3">User Password</p>
                                            <code class="text-yellow-500 font-mono text-sm"><%= player.password %></code>
                                        </div>
                                        <div class="bg-white/5 p-5 rounded-2xl border border-white/5">
                                            <p class="text-[9px] font-black uppercase text-white/40 mb-3">Player Bio / Experience</p>
                                            <p class="text-xs text-white/80 italic leading-relaxed">"<%= player.experience || player.bio %>"</p>
                                        </div>
                                    </div>
                                    <div class="space-y-6">
                                        <form action="/admin/approve-player" method="POST" class="space-y-4">
                                            <input type="hidden" name="playerId" value="<%= player.id %>">
                                            <div class="space-y-2">
                                                <label class="text-[10px] font-black uppercase text-blue-500 ml-1">Assign Market Card (URL)</label>
                                                <input name="cardImage" required placeholder="Paste Image URL..." class="w-full bg-black border border-white/10 p-5 rounded-2xl text-xs text-white focus:border-blue-500 outline-none">
                                            </div>
                                            <button type="submit" class="w-full bg-green-600 py-5 rounded-2xl text-xs font-black uppercase shadow-lg shadow-green-600/20 hover:bg-green-500 transition-all">Approve & Publish</button>
                                        </form>
                                        <form action="/admin/delete-player" method="POST">
                                            <input type="hidden" name="playerId" value="<%= player.id %>">
                                            <button type="submit" class="w-full bg-red-600/10 border border-red-500/20 py-4 rounded-2xl text-xs font-black uppercase text-red-500 hover:bg-red-600 hover:text-white transition-all">Reject Application</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </details>
                    <% }) %>
                <% } else { %>
                    <div class="py-20 text-center border-2 border-dashed border-white/5 rounded-[40px]">
                        <p class="text-xs font-black uppercase text-white/20 tracking-[1em]">Queue Empty</p>
                    </div>
                <% } %>
            </div>
        </section>

        <section id="tables" class="glass p-10 rounded-[45px] border border-blue-500/10 space-y-10">
            <div class="flex justify-between items-end">
                <div>
                    <h2 class="text-3xl font-black italic uppercase text-white">League <span class="text-blue-500">Tables</span></h2>
                    <p class="text-[10px] text-white/30 uppercase font-black">Rosters and Group Standings</p>
                </div>
                <form action="/admin/add-group" method="POST" class="flex gap-2">
                    <input name="name" placeholder="Group Name..." class="bg-white/5 border border-white/10 px-5 py-3 rounded-2xl text-xs outline-none">
                    <button type="submit" class="bg-blue-600 px-6 rounded-2xl text-[10px] font-black uppercase">Create</button>
                </form>
            </div>

            <div class="space-y-12">
                <% groups.forEach(group => { %>
                    <div class="p-8 border border-white/5 rounded-[40px] bg-white/[0.01] space-y-8">
                        <div class="flex justify-between items-center border-b border-white/5 pb-6">
                            <h4 class="text-2xl font-black italic uppercase text-blue-500"><%= group.name %></h4>
                            <form action="/admin/delete-group" method="POST">
                                <input type="hidden" name="groupId" value="<%= group.id %>">
                                <button type="submit" class="text-red-500 text-[9px] font-black border border-red-500/20 px-4 py-2 rounded-full uppercase hover:bg-red-500 hover:text-white transition-all">Destroy Table</button>
                            </form>
                        </div>

                        <div class="grid grid-cols-1 gap-8">
                            <% group.teams.forEach((team, index) => { %>
                                <div class="bg-black/40 p-6 rounded-[30px] border border-white/5 space-y-6">
                                    <form action="/admin/update-team" method="POST" class="flex flex-wrap items-center gap-4">
                                        <input type="hidden" name="groupId" value="<%= group.id %>">
                                        <input type="hidden" name="teamIndex" value="<%= index %>">
                                        <div class="flex items-center gap-3 min-w-[200px]">
                                            <img src="<%= team.logo %>" class="w-8 h-8 rounded-lg object-contain bg-white/5 p-1">
                                            <span class="font-black text-xs uppercase"><%= team.name %></span>
                                        </div>
                                        <div class="flex gap-2">
                                            <div class="flex flex-col gap-1">
                                                <label class="text-[7px] font-black uppercase text-white/30 text-center">MP</label>
                                                <input name="mp" type="number" value="<%= team.mp || 0 %>" class="w-12 bg-white/5 border-none rounded-lg p-2 text-center text-xs">
                                            </div>
                                            <div class="flex flex-col gap-1">
                                                <label class="text-[7px] font-black uppercase text-white/30 text-center">W</label>
                                                <input name="wins" type="number" value="<%= team.wins || 0 %>" class="w-12 bg-white/5 border-none rounded-lg p-2 text-center text-xs text-green-400">
                                            </div>
                                            <div class="flex flex-col gap-1">
                                                <label class="text-[7px] font-black uppercase text-white/30 text-center">L</label>
                                                <input name="loses" type="number" value="<%= team.loses || 0 %>" class="w-12 bg-white/5 border-none rounded-lg p-2 text-center text-xs text-red-400">
                                            </div>
                                            <div class="flex flex-col gap-1">
                                                <label class="text-[7px] font-black uppercase text-white/30 text-center">PTS</label>
                                                <input name="pts" type="number" value="<%= team.pts || 0 %>" class="w-12 bg-white/5 border-none rounded-lg p-2 text-center text-xs text-blue-500 font-black">
                                            </div>
                                        </div>
                                        <div class="flex gap-2 ml-auto">
                                            <button type="submit" class="bg-blue-600 px-4 py-2 rounded-xl text-[9px] font-black uppercase">Save</button>
                                            <button type="submit" formaction="/admin/delete-team" class="bg-red-500/10 text-red-500 px-4 py-2 rounded-xl text-[9px] font-black uppercase">Delete</button>
                                        </div>
                                    </form>

                                    <div class="bg-black/20 p-5 rounded-2xl border border-white/5 space-y-4">
                                        <div class="flex flex-wrap gap-2">
                                            <% (team.roster || []).forEach((player, pIdx) => { %>
                                                <div class="bg-white/5 px-4 py-2 rounded-full flex items-center gap-3 border border-white/5 group/player">
                                                    <span class="text-[10px] uppercase font-bold <%= player.isManager ? 'text-blue-400' : 'text-white/80' %>">
                                                        <%= player.isManager ? 'MGR:' : '' %> <%= player.name %>
                                                    </span>
                                                    <form action="/admin/delete-from-roster" method="POST">
                                                        <input type="hidden" name="groupId" value="<%= group.id %>">
                                                        <input type="hidden" name="teamIndex" value="<%= index %>">
                                                        <input type="hidden" name="playerIndex" value="<%= pIdx %>">
                                                        <button type="submit" class="text-red-500 font-black hover:scale-125 transition-all">×</button>
                                                    </form>
                                                </div>
                                            <% }) %>
                                        </div>
                                        <form action="/admin/add-to-roster" method="POST" class="flex gap-2 pt-2">
                                            <input type="hidden" name="groupId" value="<%= group.id %>">
                                            <input type="hidden" name="teamIndex" value="<%= index %>">
                                            <input name="playerName" required placeholder="Player Name..." class="bg-black/60 p-3 rounded-xl text-[10px] flex-1 border border-white/5 outline-none focus:border-blue-500">
                                            <select name="isManager" class="bg-black/60 p-3 rounded-xl text-[10px] border border-white/5 outline-none">
                                                <option value="false">Player</option>
                                                <option value="true">Manager</option>
                                            </select>
                                            <button type="submit" class="bg-white/10 px-5 rounded-xl text-[9px] font-black uppercase hover:bg-white/20 transition-all">Register</button>
                                        </form>
                                    </div>
                                </div>
                            <% }) %>
                            
                            <form action="/admin/update-team" method="POST" class="grid grid-cols-1 md:grid-cols-3 gap-3 p-8 border-2 border-dashed border-white/5 rounded-[30px] bg-white/[0.01]">
                                <input type="hidden" name="groupId" value="<%= group.id %>">
                                <input name="teamName" placeholder="New Team Title..." class="bg-white/5 p-4 rounded-2xl text-xs outline-none focus:border-blue-500">
                                <input name="logo" placeholder="Logo Image URL..." class="bg-white/5 p-4 rounded-2xl text-xs outline-none focus:border-blue-500">
                                <button type="submit" class="bg-white text-black text-[10px] font-black uppercase rounded-2xl hover:bg-blue-500 hover:text-white transition-all">Add To Group</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>

        <section id="market" class="glass p-10 rounded-[45px] border border-blue-500/20">
            <div class="flex justify-between items-center mb-10">
                <div>
                    <h2 class="text-3xl font-black italic uppercase text-white">Player <span class="text-blue-500">Market</span></h2>
                    <p class="text-[10px] text-white/30 uppercase font-black tracking-widest">Global Stats & Visual Cards</p>
                </div>
                <input type="text" id="playerSearch" onkeyup="filterPlayers()" placeholder="Search Database..." class="bg-white/5 border border-white/10 px-6 py-4 rounded-2xl text-[10px] text-white outline-none w-80 focus:border-blue-500 transition-all shadow-2xl">
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6" id="marketList">
                <% players.filter(p => p.verified).forEach(player => { %>
                    <details class="player-card group bg-black/40 border border-white/5 rounded-[35px] overflow-hidden hover:border-blue-500/40 transition-all" data-name="<%= player.name.toLowerCase() %>">
                        <summary class="p-6 cursor-pointer flex items-center justify-between list-none">
                            <div class="flex items-center gap-5">
                                <img src="<%= player.cardImage %>" class="w-14 h-14 rounded-2xl object-cover border border-white/10 shadow-lg">
                                <div>
                                    <p class="font-black text-white uppercase italic text-lg leading-none mb-1"><%= player.name %></p>
                                    <span class="text-[8px] bg-blue-500 text-black font-black px-2 py-0.5 rounded uppercase">Verified Professional</span>
                                </div>
                            </div>
                            <span class="text-[9px] font-black text-white/20 uppercase tracking-widest group-hover:text-blue-500 transition-all">Adjust Profile ↓</span>
                        </summary>
                        <div class="p-8 border-t border-white/5 bg-gradient-to-b from-transparent to-blue-500/[0.02]">
                            <div class="bg-yellow-500/5 border border-yellow-500/20 p-5 rounded-2xl mb-8 flex justify-between items-center">
                                <div class="space-y-1">
                                    <p class="text-[8px] font-black uppercase text-yellow-500">Security Access</p>
                                    <p class="text-xs font-mono tracking-widest text-white/60">PASS: <span class="text-white font-bold" id="passText-<%= player.id %>">••••••••</span></p>
                                </div>
                                <button type="button" onclick="togglePasswordView('<%= player.id %>', '<%= player.password %>')" class="text-[9px] font-black text-yellow-500 uppercase hover:underline">Reveal</button>
                            </div>

                            <form action="/admin/update-market-player" method="POST" class="space-y-6">
                                <input type="hidden" name="playerId" value="<%= player.id %>">
                                <input type="hidden" name="username" value="<%= player.name %>"> 
                                
                                <div class="grid grid-cols-4 gap-3">
                                    <div class="space-y-1">
                                        <label class="text-[8px] font-black uppercase text-white/30 ml-1">Goals</label>
                                        <input name="goals" type="number" value="<%= player.goals %>" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs text-center">
                                    </div>
                                    <div class="space-y-1">
                                        <label class="text-[8px] font-black uppercase text-white/30 ml-1">Assists</label>
                                        <input name="assists" type="number" value="<%= player.assists %>" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs text-center">
                                    </div>
                                    <div class="space-y-1">
                                        <label class="text-[8px] font-black uppercase text-white/30 ml-1">Saves</label>
                                        <input name="saves" type="number" value="<%= player.saves %>" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs text-center">
                                    </div>
                                    <div class="space-y-1">
                                        <label class="text-[8px] font-black uppercase text-white/30 ml-1">MVPs</label>
                                        <input name="mvps" type="number" value="<%= player.mvps %>" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-white text-xs text-center">
                                    </div>
                                </div>

                                <div class="space-y-4">
                                    <div>
                                        <label class="text-[9px] font-black uppercase text-blue-500 ml-1 mb-2 block">Card Visual URL</label>
                                        <input name="cardImage" value="<%= player.cardImage %>" class="w-full bg-black/60 border border-white/10 p-4 rounded-2xl text-xs text-white focus:border-blue-500 outline-none">
                                    </div>
                                    <div>
                                        <label class="text-[9px] font-black uppercase text-blue-500 ml-1 mb-2 block">Public Biography</label>
                                        <textarea name="bio" class="w-full bg-black/60 border border-white/10 p-4 rounded-2xl text-xs text-white h-24 focus:border-blue-500 outline-none"><%= player.bio %></textarea>
                                    </div>
                                </div>
                                
                                <div class="flex gap-4 pt-4">
                                    <button type="submit" class="flex-1 bg-blue-600 py-4 rounded-2xl font-black uppercase text-[10px] text-white shadow-lg hover:bg-blue-500 transition-all">Save Changes</button>
                                    <button type="button" onclick="triggerDelete('<%= player.id %>')" class="bg-red-600/10 border border-red-500/20 px-6 py-4 rounded-2xl text-[10px] font-black uppercase text-red-500 hover:bg-red-600 hover:text-white transition-all">Remove</button>
                                </div>
                            </form>
                        </div>
                    </details>
                <% }) %>
            </div>
        </section>
    </main>
</div>

<style>
    .glass { background: rgba(255, 255, 255, 0.02); backdrop-filter: blur(15px); }
    .custom-scrollbar::-webkit-scrollbar { width: 4px; }
    .custom-scrollbar::-webkit-scrollbar-track { background: transparent; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background: rgba(59, 130, 246, 0.2); border-radius: 10px; }
    details > summary { list-style: none; }
    details > summary::-webkit-details-marker { display: none; }
</style>

<script>
    // PRESERVED SCRIPTS
    function togglePasswordView(id, actualPass) {
        const textElement = document.getElementById(`passText-${id}`);
        if (textElement.innerText === '••••••••') {
            textElement.innerText = actualPass;
        } else {
            textElement.innerText = '••••••••';
        }
    }

    function triggerDelete(id) {
        if (confirm('PERMANENTLY DELETE THIS PLAYER FROM THE MARKET?')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/admin/delete-player';
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'playerId';
            input.value = id;
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }

    function filterPlayers() {
        let input = document.getElementById('playerSearch').value.toLowerCase();
        let cards = document.getElementsByClassName('player-card');
        for (let i = 0; i < cards.length; i++) {
            let name = cards[i].getAttribute('data-name');
            cards[i].style.display = name.includes(input) ? "" : "none";
        }
    }

    function filterQueue(input) {
        let val = input.value.toLowerCase();
        let cards = document.getElementsByClassName('queue-card');
        for (let card of cards) {
            let name = card.querySelector('p').innerText.toLowerCase();
            card.style.display = name.includes(val) ? "" : "none";
        }
    }

    function addStatRow(team) {
        const container = document.getElementById(`statRows-${team}`);
        const rowId = Date.now();
        const html = `
            <div id="row-${rowId}" class="flex items-center gap-2 bg-black/40 p-3 rounded-xl border border-white/5 animate-in slide-in-from-right duration-300">
                <input name="${team}Player[]" placeholder="Username" class="flex-1 bg-transparent text-[10px] text-white border-none outline-none px-2" required>
                <select name="${team}Type[]" class="bg-white/5 text-[9px] text-white/60 border-none rounded p-1 outline-none">
                    <option value="goals">Goals</option>
                    <option value="assists">Assists</option>
                    <option value="saves">Saves</option>
                </select>
                <input name="${team}MainValue[]" type="number" placeholder="Qty" class="w-10 bg-white/5 text-[10px] text-white border-none rounded p-1 text-center" required>
                <div class="w-px h-4 bg-white/10 mx-1"></div>
                <input name="${team}Assists[]" type="number" placeholder="Ast" class="w-10 bg-white/5 text-[10px] text-blue-400 border-none rounded p-1 text-center" required>
                <button type="button" onclick="document.getElementById('row-${rowId}').remove()" class="text-red-500 font-bold px-2 hover:scale-125 transition-all">×</button>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
    }
</script>
