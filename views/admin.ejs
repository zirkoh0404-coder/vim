<%- include('partials/navbar') %>

<style>
    .glass { background: rgba(255, 255, 255, 0.03); backdrop-filter: blur(10px); }
    .tab-btn.active { background: #3b82f6; color: white; box-shadow: 0 4px 20px rgba(59,130,246,0.3); }
    .tab-btn:not(.active) { color: rgba(255,255,255,0.4); }
    .tab-btn:hover:not(.active) { background: rgba(255,255,255,0.05); color: white; }
    .hidden-tab { display: none !important; }
</style>

<main class="py-20 px-6 max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6 border-b border-white/5 pb-8">
        <div>
            <h2 class="text-5xl font-black italic uppercase tracking-tighter text-white">ADMIN <span class="text-blue-500">DASHBOARD</span></h2>
            <p class="text-xs font-bold uppercase opacity-40 tracking-[0.3em] mt-2">VIM Hub Management Console</p>
        </div>
        
        <div class="flex bg-white/5 p-1 rounded-2xl border border-white/10 overflow-x-auto">
            <button onclick="switchTab('tab-matches')" class="admin-tab-trigger active tab-btn px-6 py-3 rounded-xl text-[10px] font-black uppercase transition-all whitespace-nowrap">Match Management</button>
            <button onclick="switchTab('tab-leagues')" class="admin-tab-trigger tab-btn px-6 py-3 rounded-xl text-[10px] font-black uppercase transition-all whitespace-nowrap">League Tables</button>
            <button onclick="switchTab('tab-market')" class="admin-tab-trigger tab-btn px-6 py-3 rounded-xl text-[10px] font-black uppercase transition-all whitespace-nowrap">Market & Apps</button>
            <button onclick="switchTab('tab-content')" class="admin-tab-trigger tab-btn px-6 py-3 rounded-xl text-[10px] font-black uppercase transition-all whitespace-nowrap">Content & Records</button>
        </div>
    </div>

    <div id="tab-matches" class="admin-tab-content space-y-12">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="glass p-8 rounded-[30px] space-y-8">
                <form action="/admin/add-match" method="POST" class="space-y-4 text-white">
                    <h3 class="text-xs font-bold uppercase opacity-40 tracking-widest text-white">Schedule Match</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="teamA" placeholder="Team 1" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none">
                        <input name="logoA" placeholder="Logo 1 URL" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none">
                        <input name="teamB" placeholder="Team 2" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none">
                        <input name="logoB" placeholder="Logo 2 URL" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="time" placeholder="Time (e.g. 18:00)" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none">
                        <input name="tags" placeholder="Tags (e.g. SERIE A, LIVE)" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white outline-none">
                    </div>
                    <label class="flex items-center gap-2 bg-white/5 p-4 rounded-2xl border border-white/10 cursor-pointer">
                        <input type="checkbox" name="isLive" value="true" class="w-4 h-4 accent-blue-500">
                        <span class="text-[10px] font-bold uppercase opacity-60">Set as LIVE match</span>
                    </label>
                    <button type="submit" class="w-full bg-white text-black py-4 rounded-2xl font-bold uppercase text-xs">Post Match</button>
                </form>

                <div class="pt-8 border-t border-white/5">
                    <h3 class="text-xs font-bold uppercase opacity-40 mb-6">Current Schedule</h3>
                    <div class="space-y-3 max-h-[400px] overflow-y-auto pr-2">
                        <% matches.forEach((m) => { %>
                            <div class="flex flex-col bg-white/5 p-5 rounded-2xl border border-white/5 gap-3">
                                <div class="flex justify-between items-center">
                                    <span class="text-sm uppercase text-white font-black italic"><%= m.teamA %> vs <%= m.teamB %></span>
                                    <form action="/admin/delete-match" method="POST" onsubmit="return confirm('Delete match?');">
                                        <input type="hidden" name="matchId" value="<%= m.id %>">
                                        <button type="submit" class="text-red-500 text-xl font-bold hover:scale-110 transition">×</button>
                                    </form>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-[10px] text-blue-400 font-bold uppercase tracking-widest"><%= m.time %></span>
                                    <div class="flex gap-2">
                                        <% if(m.tags) { m.tags.split(',').forEach(tag => { %>
                                            <span class="bg-blue-600/20 text-blue-400 px-2 py-1 rounded text-[8px] font-black uppercase"><%= tag.trim() %></span>
                                        <% })} %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>

            <div class="glass p-8 rounded-[40px] border border-blue-500/30">
                <div class="mb-8">
                    <h2 class="text-2xl font-black italic uppercase text-white">Post-Match <span class="text-blue-500">Reports</span></h2>
                    <p class="text-[9px] text-white/40 uppercase font-bold tracking-widest mt-1">Submit stats and results</p>
                </div>

                <form action="/admin/update-match-details" method="POST" class="space-y-6">
                    <div class="bg-black/40 p-5 rounded-2xl border border-white/10">
                        <p class="text-[10px] font-black uppercase text-blue-500 mb-3">Target Match</p>
                        <select name="matchId" class="w-full bg-transparent text-white text-xs outline-none font-bold" required>
                            <option value="" disabled selected>Select active match...</option>
                            <% matches.forEach(m => { %>
                                <option value="<%= m.id %>" class="bg-zinc-900"><%= m.teamA %> vs <%= m.teamB %> (<%= m.time %>)</option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-4">
                            <textarea name="narrative" placeholder="Detailed Match Narrative..." class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs outline-none h-32 focus:border-blue-500"></textarea>
                            <div class="grid grid-cols-2 gap-4">
                                <input type="number" name="possessionA" placeholder="T1 Pos %" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                                <input type="number" name="possessionB" placeholder="T2 Pos %" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                            </div>
                        </div>
                        <div class="space-y-4">
                            <div class="grid grid-cols-2 gap-4">
                                <div class="bg-blue-500/5 p-4 rounded-2xl border border-blue-500/10">
                                    <p class="text-[8px] font-black text-blue-500 uppercase mb-3">Team A Total</p>
                                    <input type="number" name="goalsA" placeholder="Goals" class="w-full bg-white/5 p-2 rounded-lg text-white mb-2">
                                    <input type="number" name="assistsA" placeholder="Assists" class="w-full bg-white/5 p-2 rounded-lg text-white">
                                </div>
                                <div class="bg-red-500/5 p-4 rounded-2xl border border-red-500/10">
                                    <p class="text-[8px] font-black text-red-500 uppercase mb-3">Team B Total</p>
                                    <input type="number" name="goalsB" placeholder="Goals" class="w-full bg-white/5 p-2 rounded-lg text-white mb-2">
                                    <input type="number" name="assistsB" placeholder="Assists" class="w-full bg-white/5 p-2 rounded-lg text-white">
                                </div>
                            </div>
                            <input name="highlights" placeholder="Highlights URL" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <input name="mvpName" placeholder="MVP Full Name" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                        <input name="mvpCardUrl" placeholder="MVP Card URL" class="bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-6 border-t border-white/5">
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-[9px] font-black uppercase text-blue-500">Team A Individual Stats</span>
                                <button type="button" onclick="addStatRow('teamA')" class="bg-blue-600 px-3 py-1 rounded-full text-[8px] font-black text-white">+ ADD ROW</button>
                            </div>
                            <div id="statRows-teamA" class="space-y-2"></div>
                        </div>
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-[9px] font-black uppercase text-red-500">Team B Individual Stats</span>
                                <button type="button" onclick="addStatRow('teamB')" class="bg-red-600 px-3 py-1 rounded-full text-[8px] font-black text-white">+ ADD ROW</button>
                            </div>
                            <div id="statRows-teamB" class="space-y-2"></div>
                        </div>
                    </div>

                    <button type="submit" class="w-full bg-blue-600 py-5 rounded-2xl font-black uppercase text-xs text-white shadow-xl hover:bg-blue-500 transition-all">Submit Match Report</button>
                </form>
            </div>
        </div>
    </div>

    <div id="tab-leagues" class="admin-tab-content hidden-tab space-y-12">
        <div class="flex justify-between items-center">
            <h2 class="text-3xl font-black uppercase text-white">League <span class="text-blue-500">Tables</span></h2>
            <form action="/admin/add-group" method="POST" class="flex gap-2">
                <input name="name" placeholder="New Table Name..." required class="bg-white/5 border border-white/10 px-6 py-3 rounded-2xl text-xs text-white outline-none focus:border-blue-500">
                <button type="submit" class="bg-blue-600 px-8 rounded-2xl text-[10px] font-black uppercase text-white">Create</button>
            </form>
        </div>

        <div class="grid grid-cols-1 gap-8">
            <% groups.forEach(group => { %>
                <div class="glass p-8 rounded-[40px] border border-white/5 relative overflow-hidden">
                    <div class="absolute -top-10 -right-10 text-[100px] font-black italic text-white/[0.02] pointer-events-none uppercase"><%= group.name %></div>
                    
                    <div class="flex justify-between items-center mb-10 relative z-10">
                        <h4 class="text-2xl font-black italic uppercase text-white"><%= group.name %></h4>
                        <form action="/admin/delete-group" method="POST" onsubmit="return confirm('Delete whole table?');">
                            <input type="hidden" name="groupId" value="<%= group.id %>">
                            <button type="submit" class="text-red-500 text-[10px] font-black border border-red-500/20 px-4 py-2 rounded-full uppercase hover:bg-red-500 hover:text-white transition">Delete Table</button>
                        </form>
                    </div>

                    <div class="space-y-6 relative z-10">
                        <% group.teams.forEach((team, index) => { %>
                            <div class="bg-white/[0.03] p-5 rounded-3xl border border-white/5 hover:border-white/20 transition">
                                <form action="/admin/update-team" method="POST" class="grid grid-cols-2 md:grid-cols-7 gap-4 items-center">
                                    <input type="hidden" name="groupId" value="<%= group.id %>">
                                    <input type="hidden" name="teamIndex" value="<%= index %>">
                                    
                                    <div class="flex items-center gap-3">
                                        <img src="<%= team.logo %>" class="w-6 h-6 object-contain">
                                        <span class="font-black text-xs text-white uppercase italic"><%= team.name %></span>
                                    </div>
                                    
                                    <div class="flex flex-col gap-1">
                                        <span class="text-[7px] font-black uppercase opacity-40">MP</span>
                                        <input name="mp" type="number" value="<%= team.mp || 0 %>" class="bg-black/40 border-none rounded-lg p-2 text-white text-center text-xs">
                                    </div>
                                    <div class="flex flex-col gap-1">
                                        <span class="text-[7px] font-black uppercase text-green-500">W</span>
                                        <input name="wins" type="number" value="<%= team.wins || 0 %>" class="bg-black/40 border-none rounded-lg p-2 text-white text-center text-xs">
                                    </div>
                                    <div class="flex flex-col gap-1">
                                        <span class="text-[7px] font-black uppercase text-red-500">L</span>
                                        <input name="loses" type="number" value="<%= team.loses || 0 %>" class="bg-black/40 border-none rounded-lg p-2 text-white text-center text-xs">
                                    </div>
                                    <div class="flex flex-col gap-1">
                                        <span class="text-[7px] font-black uppercase text-blue-500">PTS</span>
                                        <input name="pts" type="number" value="<%= team.pts || 0 %>" class="bg-blue-600/20 border-none rounded-lg p-2 text-blue-400 text-center text-xs font-black">
                                    </div>
                                    
                                    <button type="submit" class="bg-white text-black py-3 rounded-xl text-[9px] font-black uppercase">Update</button>
                                    <button type="submit" formaction="/admin/delete-team" class="bg-red-600/10 text-red-500 py-3 rounded-xl text-[9px] font-black uppercase border border-red-500/20">Remove</button>
                                </form>

                                <div class="mt-6 pt-6 border-t border-white/5">
                                    <div class="flex flex-wrap gap-2 items-center">
                                        <span class="text-[9px] font-black uppercase opacity-40 mr-4 tracking-widest">SQUAD ROSTER:</span>
                                        <% (team.roster || []).forEach((player, pIdx) => { %>
                                            <div class="bg-white/5 border border-white/10 pl-4 pr-2 py-1.5 rounded-full flex items-center gap-3">
                                                <span class="text-[10px] font-bold uppercase <%= player.isManager ? 'text-blue-400' : 'text-white' %>">
                                                    <%= player.isManager ? 'MGR:' : '' %> <%= player.name %>
                                                </span>
                                                <form action="/admin/delete-from-roster" method="POST" class="inline">
                                                    <input type="hidden" name="groupId" value="<%= group.id %>">
                                                    <input type="hidden" name="teamIndex" value="<%= index %>">
                                                    <input type="hidden" name="playerIndex" value="<%= pIdx %>">
                                                    <button type="submit" class="text-red-500 font-bold hover:scale-125 transition">×</button>
                                                </form>
                                            </div>
                                        <% }) %>
                                        <form action="/admin/add-to-roster" method="POST" class="flex items-center gap-2 ml-auto">
                                            <input type="hidden" name="groupId" value="<%= group.id %>">
                                            <input type="hidden" name="teamIndex" value="<%= index %>">
                                            <input name="playerName" required placeholder="Add player..." class="bg-white/5 border border-white/10 px-4 py-1.5 rounded-full text-[10px] text-white outline-none">
                                            <select name="isManager" class="bg-white/5 border border-white/10 px-2 py-1.5 rounded-full text-[9px] text-white outline-none">
                                                <option value="false">Player</option>
                                                <option value="true">Manager</option>
                                            </select>
                                            <button type="submit" class="bg-blue-600 w-8 h-8 rounded-full text-white font-bold">+</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }) %>

                        <form action="/admin/update-team" method="POST" class="bg-white/[0.01] border-2 border-dashed border-white/5 p-6 rounded-3xl flex flex-col md:flex-row gap-4">
                            <input type="hidden" name="groupId" value="<%= group.id %>">
                            <input name="teamName" placeholder="New Team Name" required class="flex-1 bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                            <input name="logo" placeholder="Logo URL (Icon)" class="flex-1 bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                            <button type="submit" class="bg-white text-black px-10 py-4 rounded-2xl font-black uppercase text-xs">Register Team</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <div id="tab-market" class="admin-tab-content hidden-tab space-y-12">
        <div class="glass p-10 rounded-[40px] border border-yellow-500/20">
            <div class="flex justify-between items-center mb-10">
                <div>
                    <h2 class="text-3xl font-black italic uppercase text-yellow-500">Application <span class="text-white">Queue</span></h2>
                    <p class="text-[10px] text-white/40 uppercase font-bold tracking-widest mt-1">Pending Player Approvals</p>
                </div>
                <input type="text" onkeyup="filterQueue(this)" placeholder="Search applications..." class="bg-white/5 border border-white/10 px-6 py-3 rounded-2xl text-xs text-white outline-none focus:border-yellow-500 transition-all w-64">
            </div>

            <div class="space-y-4" id="queueList">
                <% let pendingApps = players.filter(p => !p.verified); %>
                <% if (pendingApps.length > 0) { %>
                    <% pendingApps.forEach(player => { %>
                        <details class="queue-card group bg-white/[0.03] border border-white/5 rounded-3xl overflow-hidden hover:border-yellow-500/40 transition">
                            <summary class="p-6 cursor-pointer flex items-center justify-between list-none">
                                <div class="flex items-center gap-6">
                                    <div class="w-12 h-12 bg-yellow-500/10 rounded-2xl flex items-center justify-center text-yellow-500 font-black text-xl italic"><%= player.name.charAt(0) %></div>
                                    <div>
                                        <p class="font-black text-white uppercase italic text-lg leading-none"><%= player.name %></p>
                                        <p class="text-xs text-blue-400 font-bold uppercase mt-1">Discord: <%= player.discord %></p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <span class="text-[9px] font-black uppercase text-white/20 group-hover:text-yellow-500 transition">View Contract Details ↓</span>
                                </div>
                            </summary>
                            <div class="p-10 bg-black/40 border-t border-white/5">
                                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                                    <div class="space-y-6">
                                        <div class="space-y-2">
                                            <p class="text-[10px] font-black uppercase opacity-30 text-white">Experience / Bio</p>
                                            <div class="bg-white/5 p-6 rounded-2xl border border-white/5 italic text-white/80 text-sm leading-relaxed">
                                                "<%= player.experience || player.bio %>"
                                            </div>
                                        </div>
                                        <div class="flex gap-4">
                                            <div class="bg-white/5 p-4 rounded-2xl flex-1 border border-white/5">
                                                <p class="text-[8px] font-black opacity-30 text-white uppercase mb-1">Timezone</p>
                                                <p class="text-xs font-bold text-white"><%= player.timezone || 'N/A' %></p>
                                            </div>
                                            <div class="bg-white/5 p-4 rounded-2xl flex-1 border border-white/5" onclick="togglePasswordView('<%= player.id %>', '<%= player.password %>')">
                                                <p class="text-[8px] font-black opacity-30 text-white uppercase mb-1">Password (Click to view)</p>
                                                <p id="passText-<%= player.id %>" class="text-xs font-mono text-white">••••••••</p>
                                            </div>
                                        </div>
                                    </div>
                                    <form action="/admin/approve-player" method="POST" class="space-y-6">
                                        <input type="hidden" name="playerId" value="<%= player.id %>">
                                        <div class="space-y-2">
                                            <label class="text-[10px] font-black uppercase text-blue-500">Official Market Card URL</label>
                                            <input name="cardImage" placeholder="Paste generated card URL here..." class="w-full bg-black border border-white/10 p-5 rounded-2xl text-white text-xs outline-none focus:border-blue-500">
                                        </div>
                                        <div class="flex gap-4">
                                            <button type="submit" class="flex-1 bg-green-600 py-5 rounded-2xl text-xs font-black uppercase text-white shadow-lg shadow-green-600/20">Approve & Publish</button>
                                            <button type="submit" formaction="/admin/delete-player" class="bg-red-600/10 text-red-500 px-10 py-5 rounded-2xl text-xs font-black uppercase border border-red-500/20">Reject</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </details>
                    <% }) %>
                <% } else { %>
                    <div class="py-20 text-center bg-white/[0.02] rounded-[40px] border-2 border-dashed border-white/5">
                        <p class="text-xs opacity-20 uppercase font-black tracking-[0.8em] text-white italic">Queue Empty / All Clear</p>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="glass p-10 rounded-[40px] border border-blue-500/20">
            <div class="flex flex-col md:flex-row justify-between items-center mb-10 gap-6">
                <h2 class="text-3xl font-black italic uppercase text-white">Market <span class="text-blue-500">Registry</span></h2>
                <div class="relative w-full md:w-96">
                    <input type="text" id="playerSearch" onkeyup="filterPlayers()" placeholder="Filter active players..." class="w-full bg-white/5 border border-white/10 px-6 py-4 rounded-2xl text-xs text-white outline-none focus:border-blue-500">
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4" id="marketList">
                <% players.filter(p => p.verified).forEach(player => { %>
                    <details class="player-card group bg-white/[0.03] border border-white/5 rounded-3xl overflow-hidden hover:border-blue-500/40 transition" data-name="<%= player.name.toLowerCase() %>">
                        <summary class="p-5 cursor-pointer flex items-center justify-between list-none">
                            <div class="flex items-center gap-4">
                                <% let pImg = (player.cardImage && player.cardImage !== 'none' && player.cardImage !== '') ? player.cardImage : `https://www.roblox.com/headshot-thumbnail/image?userName=${encodeURIComponent(player.name)}&width=420&height=420&format=png`; %>
                                <img src="<%= pImg %>" class="w-10 h-10 rounded-xl object-cover border border-white/10">
                                <span class="font-black text-white uppercase italic text-xs truncate"><%= player.name %></span>
                            </div>
                            <span class="text-lg text-white/10 group-hover:text-blue-500 transition">⚙</span>
                        </summary>
                        <div class="p-6 bg-black/40 border-t border-white/5">
                            <form action="/admin/update-market-player" method="POST" class="space-y-4">
                                <input type="hidden" name="playerId" value="<%= player.id %>">
                                <input type="hidden" name="username" value="<%= player.name %>">
                                <div class="grid grid-cols-2 gap-3">
                                    <div class="space-y-1">
                                        <p class="text-[7px] font-black uppercase opacity-40 text-white">Gls</p>
                                        <input name="goals" type="number" value="<%= player.goals %>" class="w-full bg-white/5 border border-white/10 p-2 rounded-lg text-white text-xs">
                                    </div>
                                    <div class="space-y-1">
                                        <p class="text-[7px] font-black uppercase opacity-40 text-white">Ast</p>
                                        <input name="assists" type="number" value="<%= player.assists %>" class="w-full bg-white/5 border border-white/10 p-2 rounded-lg text-white text-xs">
                                    </div>
                                </div>
                                <div class="space-y-1">
                                    <p class="text-[7px] font-black uppercase opacity-40 text-white">Market Card URL</p>
                                    <input name="cardImage" value="<%= player.cardImage %>" class="w-full bg-white/5 border border-white/10 p-2 rounded-lg text-white text-[10px]">
                                </div>
                                <button type="submit" class="w-full bg-blue-600 py-3 rounded-xl font-black uppercase text-[10px] text-white">Save Registry</button>
                                <button type="button" onclick="triggerDelete('<%= player.id %>')" class="w-full text-red-500 text-[8px] font-black uppercase py-2 hover:underline">Revoke Contract</button>
                            </form>
                        </div>
                    </details>
                <% }) %>
            </div>
        </div>
    </div>

    <div id="tab-content" class="admin-tab-content hidden-tab space-y-12">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 glass p-10 rounded-[40px] border border-blue-500/20">
                <div class="mb-8">
                    <h3 class="text-2xl font-black uppercase text-white italic">Index <span class="text-blue-500">News Feed</span></h3>
                    <p class="text-[10px] text-white/40 font-bold uppercase mt-1">Manage home page stories</p>
                </div>
                <form action="/admin/add-story" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-4">
                        <input name="title" placeholder="Story Title" required class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                        <input name="image" placeholder="Cover Image URL" required class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs">
                    </div>
                    <textarea name="description" placeholder="Main Narrative / Headline..." required class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs h-full min-h-[120px]"></textarea>
                    <button type="submit" class="md:col-span-2 bg-white text-black py-5 rounded-2xl font-black uppercase text-xs">Publish Frontpage Story</button>
                </form>

                <div class="mt-10 space-y-3 max-h-[400px] overflow-y-auto pr-2">
                    <% if (typeof stories !== 'undefined') { %>
                        <% stories.forEach((story, sIdx) => { %>
                            <div class="flex items-center gap-6 bg-white/5 p-4 rounded-3xl border border-white/5">
                                <img src="<%= story.image %>" class="w-16 h-16 rounded-2xl object-cover">
                                <div class="flex-1">
                                    <h5 class="text-xs font-black text-white uppercase"><%= story.title %></h5>
                                    <p class="text-[10px] text-white/40 uppercase mt-1">Live on Frontpage</p>
                                </div>
                                <form action="/admin/delete-story" method="POST">
                                    <input type="hidden" name="storyIndex" value="<%= sIdx %>">
                                    <button class="bg-red-500/10 text-red-500 px-6 py-2 rounded-full text-[10px] font-black uppercase border border-red-500/10">Delete</button>
                                </form>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>

            <div class="space-y-8">
                <div class="glass p-8 rounded-[40px] border border-blue-500/10">
                    <form action="/admin/live" method="POST" class="space-y-4">
                        <h3 class="text-xs font-bold uppercase opacity-40 text-white">Global Broadcast Link</h3>
                        <input name="link" value="<%= liveLink %>" placeholder="YouTube Stream URL" class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl text-white text-xs outline-none">
                        <button type="submit" class="w-full bg-blue-600 py-3 rounded-2xl font-black uppercase text-[10px] text-white">Update Feed</button>
                    </form>
                </div>

                <div class="glass p-8 rounded-[40px] border border-blue-500/10">
                    <h3 class="text-xs font-bold uppercase opacity-40 text-white mb-6">Leaderboard Registry</h3>
                    <% ['scorers', 'assists', 'saves'].forEach(statType => { %>
                        <div class="mb-6 last:mb-0">
                            <p class="text-[9px] font-black text-blue-500 uppercase tracking-widest mb-3"><%= statType %></p>
                            <form action="/admin/update-stat" method="POST" class="flex gap-2">
                                <input type="hidden" name="type" value="<%= statType %>">
                                <input name="playerName" placeholder="Name" class="flex-1 bg-white/5 border border-white/10 p-2 rounded-xl text-[10px] text-white">
                                <input name="value" type="number" placeholder="#" class="w-14 bg-white/5 border border-white/10 p-2 rounded-xl text-[10px] text-white text-center">
                                <button type="submit" class="bg-blue-600 px-4 rounded-xl text-white font-bold text-lg">+</button>
                            </form>
                        </div>
                    <% }) %>
                </div>

                <div class="glass p-8 rounded-[40px] border border-yellow-500/10">
                    <h3 class="text-xs font-black uppercase text-yellow-500 tracking-widest mb-6">Hall of Fame</h3>
                    <form action="/admin/add-record" method="POST" class="space-y-3">
                        <input name="title" placeholder="Record Title (e.g. Most Goals)" class="w-full bg-white/5 border border-white/10 p-3 rounded-xl text-[10px] text-white">
                        <div class="grid grid-cols-2 gap-2">
                            <input name="holder" placeholder="Player" class="bg-white/5 border border-white/10 p-3 rounded-xl text-[10px] text-white">
                            <input name="value" placeholder="Value" class="bg-white/5 border border-white/10 p-3 rounded-xl text-[10px] text-white">
                        </div>
                        <button type="submit" class="w-full bg-yellow-600 py-3 rounded-xl font-black uppercase text-[10px] text-white">Add Legend</button>
                    </form>
                    <div class="mt-6 space-y-2 max-h-[200px] overflow-y-auto pr-1">
                        <% records.forEach(record => { %>
                            <div class="flex justify-between items-center bg-white/5 p-3 rounded-xl border border-white/5">
                                <div class="text-[9px] uppercase font-bold text-white"><%= record.title %></div>
                                <form action="/admin/delete-record" method="POST">
                                    <input type="hidden" name="recordId" value="<%= record.id %>">
                                    <button class="text-red-500 font-black px-2">×</button>
                                </form>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    // TAB SWITCHING LOGIC
    function switchTab(tabId) {
        // Hide all
        document.querySelectorAll('.admin-tab-content').forEach(el => el.classList.add('hidden-tab'));
        document.querySelectorAll('.admin-tab-trigger').forEach(btn => btn.classList.remove('active'));
        
        // Show target
        document.getElementById(tabId).classList.remove('hidden-tab');
        event.currentTarget.classList.add('active');
        
        // Save to local storage so it persists on refresh
        localStorage.setItem('adminActiveTab', tabId);
    }

    // Persist tab on refresh
    window.addEventListener('load', () => {
        const active = localStorage.getItem('adminActiveTab');
        if (active && document.getElementById(active)) {
            const btn = Array.from(document.querySelectorAll('.admin-tab-trigger')).find(b => b.getAttribute('onclick').includes(active));
            if(btn) btn.click();
        }
    });

    // ORIGINAL LOGIC PRESERVED (Lines 500+)
    function togglePasswordView(id, actualPass) {
        const textElement = document.getElementById(`passText-${id}`);
        if (textElement.innerText === '••••••••') {
            textElement.innerText = actualPass;
        } else {
            textElement.innerText = '••••••••';
        }
    }

    function triggerDelete(id) {
        if (confirm('PERMANENTLY DELETE THIS PLAYER FROM THE MARKET?')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/admin/delete-player';
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'playerId';
            input.value = id;
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }

    function filterPlayers() {
        let input = document.getElementById('playerSearch').value.toLowerCase();
        let cards = document.getElementsByClassName('player-card');
        for (let i = 0; i < cards.length; i++) {
            let name = cards[i].getAttribute('data-name');
            if (name.includes(input)) {
                cards[i].style.display = "";
            } else {
                cards[i].style.display = "none";
            }
        }
    }

    function filterQueue(input) {
        let val = input.value.toLowerCase();
        let cards = document.getElementsByClassName('queue-card');
        for (let card of cards) {
            let name = card.querySelector('p').innerText.toLowerCase();
            card.style.display = name.includes(val) ? "" : "none";
        }
    }

    function addStatRow(team) {
        const container = document.getElementById(`statRows-${team}`);
        const rowId = Date.now();
        const html = `
            <div id="row-${rowId}" class="flex items-center gap-2 bg-black/40 p-2 rounded-xl border border-white/5 animate-in slide-in-from-right duration-300">
                <input name="${team}Player[]" placeholder="Player Name" class="flex-1 bg-transparent text-[10px] text-white border-none outline-none px-2" required>
                <select name="${team}Type[]" class="bg-white/5 text-[9px] text-white/60 border-none rounded p-1">
                    <option value="goals">Goals</option>
                    <option value="assists">Assists</option>
                    <option value="saves">Saves</option>
                </select>
                <input name="${team}MainValue[]" type="number" placeholder="Count" class="w-12 bg-white/5 text-[10px] text-white border-none rounded p-1 text-center" required>
                <div class="w-px bg-white/10 mx-1"></div>
                <input name="${team}Assists[]" type="number" placeholder="Ast" class="w-12 bg-white/5 text-[10px] text-blue-400 border-none rounded p-1 text-center" required>
                <button type="button" onclick="document.getElementById('row-${rowId}').remove()" class="text-red-500 font-bold px-2">×</button>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
    }
</script>
